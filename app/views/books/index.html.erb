<!-- app/views/books/index.html.erb -->
<h1>Book Collection</h1>

<%= link_to 'Add New Book', new_book_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.published_date %></td>
        <td>
          <%= link_to 'Show', book_path(book), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %>
          <%= link_to("Delete", delete_book_path(book), class: 'action delete') %>


        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
